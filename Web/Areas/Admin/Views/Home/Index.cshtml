@model IndexViewModel

@{
    ViewData["Title"] = "Начало";
}

<h1 class="text-center">Обща информация за системата</h1>

<div class="row justify-content-center">
    <div class="col-sm-6 col-md-3 mt-4">
        <div class="card align-items-center justify-content-center">
            <img class="card-img-top" src="images/school_icon.png" alt="Card image cap">
            <div class="justify-content-center align-items-center">
                <a asp-controller="Schools" class="btn btn-sm btn-primary">Училища</a>
                <div class="text-center item-value">@Model.SchoolsCount</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 mt-4">
        <div class="card align-items-center justify-content-center">
            <img class="card-img-top" src="images/teacher_icon.png" alt="Card image cap">
            <div class="justify-content-center align-items-center">
                <div class="text-center item-name">Учители</div>
                <div class="text-center item-value">@Model.TeachersCount</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 mt-4">
        <div class="card align-items-center justify-content-center">
            <img class="card-img-top" src="images/group_icon.png" alt="Card image cap">
            <div class="justify-content-center align-items-center">
                <div class="text-center item-name">Групи</div>
                <div class="text-center item-value">@Model.GroupsCount</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3 mt-4">
        <div class="card align-items-center justify-content-center">
            <img class="card-img-top" src="images/student_icon.png" alt="Card image cap">
            <div class="justify-content-center align-items-center">
                <div class="text-center item-name">Ученици</div>
                <div class="text-center item-value">@Model.StudentsCount</div>
            </div>
        </div>
    </div>
</div>

