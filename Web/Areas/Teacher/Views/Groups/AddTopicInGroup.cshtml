@model GroupTopicSelectFormServiceModel

@{
    ViewData["Title"] = Model.GroupName;
}

<nav class="d-flex" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action="Group" asp-route-id="@Model.GroupId"><i class="fa-solid fa-arrow-left"></i> Назад</a>
        </li>
    </ol>
</nav>

<h3 class="text-center text-secondary">Добавяне на тема към група</h3>
<h5 class="text-center text-secondary">@ViewData["Title"]</h5>

@if (Model.TopicsListToAdd.Any())
{
    <div class="row justify-content-center">
        <div class="p-3 col-md-6">
            <form method="post">
                <h6 class="text-center">избери тема</h6>
                <ul class="list-group">
                    @for (int i = 0; i < Model.TopicsListToAdd.Count(); i++)
                    {
                        <li class="list-group-item">
                            <div class="form-check">
                                <input asp-for="@Model.TopicsListToAdd[i].IsChecked" class="form-check-input" type="checkbox">
                                <label asp-for="@Model.TopicsListToAdd[i].IsChecked" class="form-check-label">
                                    @Model.TopicsListToAdd[i].Value
                                </label>
                                <input type="hidden" asp-for="@Model.TopicsListToAdd[i].Key" />
                                <input type="hidden" asp-for="@Model.TopicsListToAdd[i].Value" />
                            </div>
                        </li>
                    }
                </ul>

                <div class="text-center mt-3">
                    <a asp-action="Group" asp-route-id="@Model.GroupId" class="btn btn-outline-secondary">Отказ</a>
                    <button type="submit" class="btn btn-primary">Добави</button>
                </div>
            </form>
        </div>
    </div>
}

<partial name="_ValidationScriptsPartial" />
<partial name="_FontAwesomePartial" />


