@model GroupTopicsModel

@using static Infrastructure.Constants.DataConstants

<div class="text-end">
    <a asp-action="AddTopicInGroup" asp-route-id="@Model.GroupId" class="btn btn-outline-primary my-2">Добави тема</a>
</div>

<div class="accordion" id="accordionPanels">
    @foreach (var topic in Model.Topics.OrderBy(t => t.Name))
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="panel-heading-@topic.TopicId">
                <button class="accordion-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#panel-@topic.TopicId"
                        aria-expanded="true"
                        aria-controls="panel-@topic.TopicId">
                    <h6 class="text-secondary">@topic.Name</h6>
                </button>
            </h2>

            <div id="panel-@topic.TopicId"
                 class="accordion-collapse collapse show"
                 aria-labelledby="panel-heading-@topic.TopicId">
                <div class="row accordion-body">
                    <div class="col-6">
                        <span class="fw-bold">Съдържание</span>
                        @foreach (var item in topic.Contents.Split(Environment.NewLine))
                        {
                            <div class="mt-2">@item</div>
                        }
                    </div>
                    <div class="col-6">
                        <span class="fw-bold">Ресурси</span>
                        @foreach (var res in topic.Resources)
                        {
                            <div class="mt-2">
                                @Html.Raw(ResourceIconRef[res.IconRef]) @res.TextToDisplay
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
