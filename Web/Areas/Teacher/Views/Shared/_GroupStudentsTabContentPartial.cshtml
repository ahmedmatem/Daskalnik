@model GroupStudentsModel

<div class="text-end">
    <a asp-action="AddStudentInGroup" asp-route-id="@Model.GroupId"
       class="btn btn-outline-primary my-2">Добави ученик</a>
</div>

@if (Model.Students.Any())
{
    <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action active">
            Ученици
        </a>
        @foreach (var student in Model.Students)
        {
            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                @student.FullName
                <a asp-action="RemoveStudentFromGroup"
                   asp-route-groupId="@Model.GroupId"
                   asp-route-studentId="@student.StudentId"
                   class="text-secondary"
                   title="Премахни ученик от групата">
                    <i class="fa-regular fa-trash-can"></i>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-primary text-center" role="alert">
        Няма добавени ученици в групата
    </div>
}